<%- include('./partials/header') %>

<form action="/characters/<%= currentCharacter._id %>?_method=PUT" method="POST">
    Name:<br />
    <input type="text" name="name" maxlength="20" value="<%= currentCharacter.name %>" required><br />
    Image Link:<br />
    <input type="text" name="image" value="<%= currentCharacter.image %>" required><br />
    System:<br />
    <input type="text" name="system" maxlength="20" value="<%= currentCharacter.system %>" required><br />
    Class:<br />
    <input type="text" name="class" maxlength="20" value="<%= currentCharacter.class %>"><br />
    Intro:<br />
    <input type="text" name="intro" maxlength="128" value="<%= currentCharacter.intro %>" required><br />
    Height:<br />
    <input type="text" name="height" maxlength="10" value="<%= currentCharacter.height %>"><br />
    Weight:<br />
    <input type="text" name="weight" maxlength="10" value="<%= currentCharacter.weight %>"><br />
    Physical Description:<br />
    <input type="text" name="description" maxlength="500" value="<%= currentCharacter.description %>"><br />
    About:<br />
    <textarea name="about" maxlength="10000" style="width:100%;height:150px;"><%= currentCharacter.about %></textarea>
    <input class="btn waves-effect waves-light" type="submit" value="Update character">
    </form>